<% provide(:title, @chinchin.name) %>
<div class="divider-thin"></div>
<div style="float: left; margin-right: 20px; margin-top: 5px; margin-bottom: 25px; width: 120px; height: 120px; overflow: hidden; display: inline-block;">
  <img src="http://graph.facebook.com/<%= @chinchin.uid %>/picture?type=large" align="absmiddle" width=120 style="min-width: 120px; min-height: 120px;" />
</div>

<h2>Hi <strong><%= @chinchin.first_name %></strong>!<br />
  <% if age(@chinchin.birthday) %>
    <%= age(@chinchin.birthday) %> years old
  <% end %>
  <% if @chinchin.location %>
    <%= @chinchin.location %>
  <% end %>
  <% if @chinchin.school %>
    <%= @chinchin.school %>
  <% end %>
  <% if @chinchin.employer %>
    <%= @chinchin.employer %>
  <% end %></h2>

<div class="divider-thin-XL"></div>

<p id="photos">
  <% if @photos %>
    <%= link_to "#{@photos.count}개의 프로필 사진이 더 있습니다. 보시겠습니까?", {:action => "profile_photos", :id => @chinchin.id}, :remote => true %>
  <% end  %>
</p>

<p id="likes">
  <% if @likes %>
    <% @likes.each do |like| %>
        <%= like %>
    <% end %>
  <% end %>
</p>