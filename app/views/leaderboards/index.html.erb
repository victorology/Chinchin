<% @chinchins.each do |chinchin| %>
    <div class="user-index-box">
      <div class="user-photo">
        <%= image_tag ( chinchin[:chinchin].picture('large') ), :align => "absmiddle", :width => "120", :style => "min-width: 120px; min-height: 120px;" %>
      </div> <!-- .user-photo -->
      <div class="user-index-info">
        <h3><%= link_to chinchin[:chinchin].name, chinchin_path(chinchin[:chinchin]) %></h3>
        <% if age(chinchin[:chinchin].birthday) %>
            <div class="birthday"><%= age(chinchin[:chinchin].birthday) %> years old</div>
        <% end %>
        <% if chinchin[:chinchin].location %>
            <div class="location"><%= chinchin[:chinchin].location %></div>
        <% end %>
        <% if chinchin[:chinchin].school %>
            <div class="school"><%= chinchin[:chinchin].school %></div>
        <% end %>
        <% chinchin[:chinchin].friendships.each do |friendship| %>
            <%= friendship.user.name %>
        <% end %>
      </div> <!-- .user-index-info -->
    </div> <!-- .user-index-box -->
<% end %>
