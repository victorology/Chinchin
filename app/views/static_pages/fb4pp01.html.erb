<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>

  <script type="text/javascript">

    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-30640878-1']);
    _gaq.push(['_setDomainName', 'chinchinapp.com']);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();

    // Added to track client side errors in GA
    window.onerror = function(message, file, line) { 
       var sFormattedMessage = '[' + file + ' (' + line + ')] ' + message; 
       _gaq.push(['_trackEvent', 'Exceptions', 'Application', sFormattedMessage, null, true]);
    }

  </script>
</head>
<body>

<% if user_likes_page? %>

	<div id="fb4pp01bg">
		<div id="fb-start-app">
			<%= link_to "Find out more!", "/auth/facebook" %>
		</div> <!-- #fb-start-app -->
	</div> <!-- #fb4pp01bg -->

	<div class="fb-comments" data-href="https://www.facebook.com/chinchinapp/app_350879474993793" data-num-posts="10" data-width="810"></div>

<% else %>

	<div id="fb4pp01bg">
		<div id="fb-like-gate">
		</div> <!-- #fb-like-gate -->
	</div> <!-- #fb4pp01bg -->

	<div class="fb-comments" data-href="https://www.facebook.com/chinchinapp/app_350879474993793" data-num-posts="10" data-width="810"></div>

<% end %>

<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=234732379910412";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>
</body>
</html>