<% provide(:title, @user.name) %>
<div class="divider-thin"></div>
<div style="float: left; margin-right: 20px; margin-top: 5px; margin-bottom: 25px; width: 120px; height: 120px; overflow: hidden; display: inline-block;">
  <img src="http://graph.facebook.com/<%= @user.uid %>/picture?type=large" align="absmiddle" width=120 style="min-width: 120px; min-height: 120px;" />
</div>

<% if @user.gender == "male" %>
	<h2>
		<%= t '.male_friends_html', :username => @user.name, :friends => @user.chinchin.length %>
		<%= t '.male_birthday', :firstname => @user.first_name, :birthday => @user.birthday %>
		<% if !@user.location.nil? %>
			<%= t '.male_location', :location => @user.location %>
		<% end %>
		<% if !@user.relationship_status.nil? %>
			<%= t '.male_relationship_status', :relationshipstatus => @user.relationship_status %>
		<% end %>
		<% if !@user.position.nil? && !@user.employer.nil? %>
			<%= t '.male_position_employer', :position => @user.position, :employer => @user.employer %>
		<% elsif !@user.employer.nil? %>
			<p><%= t '.male_employer', :employer => @user.employer %></p>
		<% end %>
		<% if !@user.school.nil? %>
			<%= t '.male_school', :school => @user.school %>
		<% end %>
		<%= t '.male_introduce' %>
		  <%= link_to "Sign out", signout_path, id: "sign_out" %>
	</h2>
<% else %>
	<h2>
		<%= t '.female_friends_html', :username => @user.name, :friends => @user.chinchin.length %>
		<%= t '.female_birthday', :firstname => @user.first_name, :birthday => @user.birthday %>
		<% if !@user.location.nil? %>
			<%= t '.female_location', :location => @user.location %>
		<% end %>
		<% if !@user.relationship_status.nil? %>
			<%= t '.female_relationship_status', :relationshipstatus => @user.relationship_status %>
		<% end %>
		<% if !@user.position.nil? && !@user.employer.nil? %>
			<%= t '.female_position_employer', :position => @user.position, :employer => @user.employer %>
		<% elsif !@user.employer.nil? %>
			<p><%= t '.female_employer', :employer => @user.employer %></p>
		<% end %>
		<% if !@user.school.nil? %>
			<%= t '.female_school', :school => @user.school %>
		<% end %>
		<%= t '.female_introduce' %>
		<div class="sign_out">
		  <%= link_to "Sign out", signout_path, id: "sign_out" %>
		</div>
	</h2>
<% end %>
<div class="divider-thin-XL"></div>

<% @user.chinchin.each do |friend| %>
	<div class="user-index-box">
		<div class="user-photo">
			<%= image_tag ( friend.picture('large') ), :align => "absmiddle", :width => "120", :style => "min-width: 120px; min-height: 120px;" %>
		</div> <!-- .user-photo -->
		<div class="user-index-info">
			<h3><%= friend.name %></h3>
	  	</div> <!-- .user-index-info -->
	</div> <!-- .user-index-box -->
<% end %>
<br />

<!-- start Mixpanel Registered User -->
<script type="text/javascript">
  mixpanel.track("Home Page Registered");
  mixpanel.identify(<%= current_user.id %>);
  mixpanel.people.set({
  	"$name": "<%= current_user.name %>",
  	"$email": "<%= current_user.email %>",
  	"$last_login": new Date(),
  	"referrer": document.referrer
  });
  mixpanel.people.increment("visits");
</script>
<!-- end Mixpanel Home Page Registered User -->