<%= provide(:title, 'All users') %>
<div class="divider-thin"></div>
<h2><%= t '.headline', :users => User.count %></h2>
<div class="divider-thin-XL"></div>

<% @users.each do |user| %>
	<div class="user-index-box">
		<div class="user-photo">
			<%= image_tag "http://graph.facebook.com/#{user.uid}/picture?type=large", :align => "absmiddle", :width => "120", :style => "min-width: 120px; min-height: 120px;" %>
		</div> <!-- .user-photo -->
		<div class="user-index-info">
			<h3><%= link_to user.name, user %></h3>
      <p>
      	<%= t '.age', :age => age(user.birthday) %><br />
	      <% if !user.location.nil? %>
		      <%= t '.location', :location => user.location %><br />
		    <% end %>
				<% if !user.employer.nil? %>
					<%= t '.employer', :employer => user.employer %><br />
				<% end %>
				<% if !user.school.nil? %>
					<%= t '.school', :school => user.school %><br />
				<% end %>
	    </p>
	  </div> <!-- .user-index-info -->
	</div> <!-- .user-index-box -->
<% end %>
