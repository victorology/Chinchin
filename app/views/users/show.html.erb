<% provide(:title, @user.name) %>

<div class="divider-thin"></div>
<div style="float: left; margin-right: 20px; margin-top: 5px; margin-bottom: 25px; width: 120px; height: 120px; overflow: hidden; display: inline-block;">
  <img src="http://graph.facebook.com/<%= @user.uid %>/picture?type=large" align="absmiddle" width=120 style="min-width: 120px; min-height: 120px;" />
</div>

<h2><strong><%= @user.first_name %></strong><br />
  <div class="user-age"><%= t '.age', :age => age(@user.birthday) %></div>
  <% if @user.location %>
  	<div class="user-location"><%= t '.location', :location => @user.location %></div>
  <% end %>
  <% if @user.employer %>
  	<div class="user-employer"><%= t '.employer', :employer => @user.employer %></div>
  <% end %>
  <% if @user.school %>
  	<div class="user-school"><%= t '.school', :school => @user.school %></div>
  <% end %>
</h2>

<div class="divider-thin-XL"></div>
