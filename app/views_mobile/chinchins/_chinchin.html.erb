<div class="user-photo-large">
  <div class="dummy" id="<%= @chinchin.id %>" />
  <% if not @chinchin.profile_photos.first.nil? %>
    <img src="<%= @chinchin.profile_photos.first.source_url %>" align="absmiddle" width=100% style="min-width: 320px; min-height: 320px;" />
  <% else  %>
    <img src="http://graph.facebook.com/<%= @chinchin.uid %>/picture?type=large" align="absmiddle" width=100% style="min-width: 320px; min-height: 320px;" />
  <% end %>
</div> <!-- .user-photo-large -->

<ul class="tabs">
  <li><a href="#tab1">Tab 1</a></li>
  <li><a href="#tab2">Tab 2</a></li>
  <li><a href="#tab3">Tab 3</a></li>
</ul>

<div id="tab1">
  <h2>
    <% if age(@chinchin.birthday) %>
        <div class="profile-user-age"><div class="user-age-icon"></div><%= t '.age', :age => age(@chinchin.birthday) %></div>
    <% end %>
    <% if @chinchin.location %>
        <div class="profile-user-location"><div class="user-location-icon"></div><%= t '.location', :location => @chinchin.location %></div>
    <% end %>
    <% if @chinchin.employer %>
        <div class="profile-user-employer"><div class="user-employer-icon"></div><%= t '.employer', :employer => @chinchin.employer %></div>
    <% end %>
    <% if @chinchin.school %>
        <div class="profile-user-school"><div class="user-school-icon"></div><%= t '.school', :school => @chinchin.school %></div>
    <% end %>
  </h2>
</div> <!-- #tab1 -->

<div id="tab2">
  <div class="container-profile-photos">
    <% if @photos %>
      <% @photos.each do |photo| %>
        <div class="user-profile-photo">
          <%= image_tag photo.picture_url, :align => "absmiddle", :width => "120", :style => "min-width: 120px; min-height: 120px;" %>
        </div> <!-- .user-profile-photo -->
      <% end %>
    <% end  %>
  </div> <!-- .container-profile-photos -->
</div> <!-- #tab2 -->

<div id="tab3">
  <h2>
    <% @chinchin.friendships.each do |friendship| %>
      <%= friendship.user.name %>
    <% end %>
  </h2>
</div> <!-- #tab3 -->