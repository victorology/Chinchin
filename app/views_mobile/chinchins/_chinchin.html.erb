<div class="user-photo-large">
  <img src="http://graph.facebook.com/<%= @chinchin.uid %>/picture?type=large" align="absmiddle" width=100% style="min-width: 320px; min-height: 320px;" />
</div> <!-- .user-photo-large -->

<h2>
  <div class="profile-user-name"><%= @chinchin.first_name %></div>
  <% if age(@chinchin.birthday) %>
      <div class="profile-user-age"><%= t '.age', :age => age(@chinchin.birthday) %></div>
  <% end %>
  <% if @chinchin.location %>
      <div class="profile-user-location"><%= t '.location', :location => @chinchin.location %></div>
  <% end %>
  <% if @chinchin.employer %>
      <div class="profile-user-employer"><%= t '.employer', :employer => @chinchin.employer %></div>
  <% end %>
  <% if @chinchin.school %>
      <div class="profile-user-school"><%= t '.school', :school => @chinchin.school %></div>
  <% end %>
</h2>