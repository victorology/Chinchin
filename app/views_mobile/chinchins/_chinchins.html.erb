<div class="container-10px">

<% if chinchins.nil? or chinchins.size == 0 %>

<div class="empty-data">
  <div class="empty-chinchins-icon"></div>
  <h1>No Chinchins Yet :(</h1>
  <p>It looks like none of your friends are on Chinchin yet. When a friend of yours signs up, we will let you know and you can start browsing Chinchins.</p>
</div> <!-- .empty-data -->

<% else %>

<% chinchins.each do |friend| %>
  <a href="#">
    <div class="user-index-box" id="<%=friend.id%>">
      <div class="user-photo">
        <%= image_tag ( friend.picture('large') ), :align => "absmiddle", :width => "120", :style => "min-width: 120px; min-height: 120px;" %>
      </div> <!-- .user-photo -->
      <div class="user-index-info">
        <div class="user-index-basic-info">
            <h3><%= friend.first_name %></h3>
            <% if age(friend.birthday) %>
                <div class="user-age"><%= t '.age', :age => age(friend.birthday) %></div>
            <% end %>
            <% if friend.location %>
                <div class="user-location"><%= t '.location', :location => friend.location %></div>
            <% end %>
            <% if friend.employer %>
                <div class="user-employer"><%= t '.employer', :employer => friend.employer %></div>
            <% end %>
            <% if friend.school %>
                <div class="user-school"><%= t '.school', :school => friend.school %></div>
            <% end %>
        </div> <!-- .user-index-basic-info -->
        <div class="user-index-additional-info">
          <div class="user-photo-count"></div>
          <span class="picture-count">
            <%= (friend.profile_photos || []).size %>
          </span>
          <div class="user-friend-count"></div>
          <span class="mutual-friend-count">
            <%= friend.friendships.count %>
            <% if friend.friendships.count == 1 %> mutual friend
            <% else %> mutual friends
            <% end %>
          </span>
        </div>
      </div> <!-- .user-index-info -->
    </div> <!-- .user-index-box -->
  </a>
  <div class="clear" />
<% end %>

<% end %>

</div> <!-- .container-10px -->

<script type="text/javascript">
    $(document).ready(function(){
        var info_width = document.width - 120 - 30;
        $(".user-index-info").width(info_width+'px');
    });
</script>
