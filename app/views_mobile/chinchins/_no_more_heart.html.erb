<div class="container-10px">

<div class="empty-data">
  <div class="empty-hearts-icon"></div>
  <h1><%= t '.no_hearts' %></h1>
  <p><%= t '.no_hearts_long' %></p>
  <div id="time-left-big"></div>
  
  <!-- start Mixpanel No Hearts -->
  <script type="text/javascript">
        mixpanel.track("No Hearts");
        $("#time-left-small").hide();
        timer(
            <%= currency_timeleft(@user, Currency::HEART) %>,
            function(timeleft) {
                var min = Math.floor(timeleft / 60);
                var second = timeleft % 60;
                $("#time-left-big").html(pad(min, 2) + ":" + pad(second, 2));
            },
            function() {
                $("#time-left-big").html('<a href="/m#browse">Refresh!</a>');
            }
        );
  </script>
  <!-- end Mixpanel No Hearts -->
</div> <!-- .empty-data -->

</div> <!-- .container-10px -->