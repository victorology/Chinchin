<% provide(:title, @chinchin.name) %>

<div class="user-photo-large">
  <img src="http://graph.facebook.com/<%= @chinchin.uid %>/picture?type=large" align="absmiddle" width=300 style="min-width: 300px; min-height: 300px;" />
</div> <!-- .user-photo-large -->

<h2><strong><%= @chinchin.first_name %></strong><br />
  <% if age(@chinchin.birthday) %>
    <div class="user-age"><%= t '.age', :age => age(@chinchin.birthday) %></div>
  <% end %>
  <% if @chinchin.location %>
    <div class="user-location"><%= t '.location', :location => @chinchin.location %></div>
  <% end %>
  <% if @chinchin.employer %>
    <div class="user-employer"><%= t '.employer', :employer => @chinchin.employer %></div>
  <% end %>
  <% if @chinchin.school %>
    <div class="user-school"><%= t '.school', :school => @chinchin.school %></div>
  <% end %>
</h2>

<p id="photos">
  <% if @photos %>
    <%= link_to "#{@photos.count}개의 프로필 사진이 더 있습니다. 보시겠습니까?", {:action => "profile_photos", :id => @chinchin.id}, :remote => true %>
  <% end  %>
</p>

<p id="likes">
  <% if @likes %>
    <% @likes.each do |like| %>
        <%= like %>
    <% end %>
  <% end %>
</p>