<% if leaders.nil? or leaders.size == 0 %>

<div class="container-10px">

<div class="empty-data">
  <div class="empty-chinchins-icon"></div>
  <h1><%= t '.hot_friends' %></h1>
  <p><%= t '.hot_friends_long' %></p>
  <h2><a href="https://www.facebook.com/dialog/feed?app_id=%20352455024800701&link=http://chinchinapp.com/&picture=http://chinchinapp.com/assets/fb-icon.png&name=Chinchin&caption=Where%20will%20you%20find%20your%20next%20hot%20date?&description=Chinchin%20is%20a%20social%20club%20where%20you%20can%20meet%20new%20people%20through%20your%20mutual%20friends.&redirect_uri=%20http://bit.ly/16908k2" class="invite-friends">Invite Friends</a></h2>
  <!-- start Mixpanel No Hot Friends -->
  <script type="text/javascript">
    mixpanel.track("No Hot Friends");
    mixpanel.track_links('a.invite-friends', 'Invite Friends');
  </script>
  <!-- end Mixpanel No Hot Friends -->
</div> <!-- .empty-data -->

</div> <!-- .container-10px -->

<% else %>

    <%= render :partial => "leader_rows", :locals => {:leaders => leaders} %>

<% end %>

<script type="text/javascript">
    $(document).ready(function(){
        var info_width = document.width - 54 - 70 - 30;
        $(".row2-content-hot-friends").width(info_width+'px');
    });
</script>
