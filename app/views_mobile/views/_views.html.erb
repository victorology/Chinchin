<% views.each do |view| %>
    <div class="user-index-box" id="<%= view.viewer.id %>">
      <div class="user-photo">
        <%= image_tag ( view.viewer.picture('large') ), :align => "absmiddle", :width => "120", :style => "min-width: 120px; min-height: 120px;" %>
      </div> <!-- .user-photo -->
      <div class="user-index-info">
        <h3><%= link_to view.viewer.first_name, "#" %></h3>
        <% if age(view.viewer.birthday) %>
            <div class="user-age"><%= t '.age', :age => age(view.viewer.birthday) %></div>
        <% end %>
        <% if view.viewer.location %>
            <div class="user-location"><%= t '.location', :location => view.viewer.location %></div>
        <% end %>
        <% if view.viewer.employer %>
            <div class="user-employer"><%= t '.employer', :employer => view.viewer.employer %></div>
        <% end %>
        <% if view.viewer.school %>
            <div class="user-school"><%= t '.school', :school => view.viewer.school %></div>
        <% end %>
        <% view.viewer.friendships(current_user).each do |mutual_friend| %>
            <%= mutual_friend.name %>
        <% end %>
      </div> <!-- .user-index-info -->
    </div> <!-- .user-index-box -->
<% end %>
